<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= task.completed ? raw('<i class="fa-regular fa-square-check"></i>') : raw('<i class="fa-regular fa-square"></i>') %>
      <%= link_to task.title, task_path(task) %>
      <%= link_to raw('<i class="fa-regular fa-trash-can"></i>'), task_path(task), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add a new task', new_task_path %>
